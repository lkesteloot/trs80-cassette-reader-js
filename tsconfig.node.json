{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2015",
        "sourceMap": false,
        "moduleResolution": "Node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "build",
        "noImplicitReturns": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
